{
  "name": "isomorphic-redux",
  "version": "1.0.0",
  "repository": "https://github.com/bananaoomarang/isomorphic-redux",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production NODE_PATH=./build/shared node ./build/server",
    "dev": "NODE_PATH=./app node ./src/server",
    "build": "rimraf ./build && yarn build:app && yarn build:server && yarn build:client",
    "build:app": "babel app -d build/app --copy-files",
    "build:client": "webpack --progress --color -p --config ./webpack/webpack.prod.config.js",
    "build:server": "babel src -d build/src --copy-files",
    "lint": "yarn lint:app && yarn lint:src && yarn lint:test",
    "lint:app": "eslint app",
    "lint:src": "eslint src",
    "lint:test": "eslint test",
    "test": "yarn test:unit && yarn test:browser && yarn test:http",
    "test:browser": "NODE_ENV=test NODE_PATH=./app mocha --require babel-register --require test/browser.testSetup.js test/**/*.browser.js",
    "test:http": "NODE_ENV=test NODE_PATH=./app mocha --require babel-register --require test/http.testSetup.js test/**/*.http.js",
    "test:unit": "NODE_ENV=test NODE_PATH=./app mocha --require babel-register --require test/spec.testSetup.js test/**/*.spec.js",
    "ci": "yarn lint && yarn build && yarn test"
  },
  "author": "Milo Mordaunt <milomord@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.15.3",
    "babel-core": "^6.21.0",
    "babel-polyfill": "^6.20.0",
    "bluebird": "^3.4.7",
    "body-parser": "^1.15.2",
    "core-decorators": "^0.15.0",
    "express": "^4.14.0",
    "express-session": "^1.14.2",
    "hoist-non-react-statics": "^1.2.0",
    "lodash": "^4.13.1",
    "markdown-to-react-components": "^0.2.2",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-addons-update": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-router": "^3.0.0",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "serve-favicon": "^2.3.2",
    "styled-components": "^1.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "chai-enzyme": "^0.6.1",
    "cheerio": "^0.22.0",
    "clean-webpack-plugin": "^0.1.9",
    "enzyme": "^2.7.0",
    "eslint": "^2.11.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.3.0",
    "eslint-plugin-react": "^5.1.1",
    "jsdom": "^9.9.1",
    "jsdom-global": "^2.1.1",
    "mocha": "^3.2.0",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.6",
    "sinon-chai": "^2.8.0",
    "supertest-chai": "^0.0.8",
    "webpack": "^1.13.1",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
